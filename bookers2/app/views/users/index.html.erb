

<div class='container'>
	<div class='row'>


     <%= render 'users/list', users: @users %>


	<h1>All users</h1>

	<div class='col-xs-9'>
		<table class="col-xs-12">
			<thead>
				<tr> 
				  <th>image</th>
			      <th>name</th>
			      <th colspan="2"></th>
			    </tr>
			</thead>
            <% @users.each do |user| %>
			<tbody>
			  <tr>
				<th><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></th>
				<th><%= link_to user.name, user, class: "user_#{@user.id}" %></th>
			 </tr>
		</tbody>
		    <% end %>
		<table>

	</div>


	</div>
</div>