<div class='col-xs-3'>
	<h2>User info</h2>
<p class="profile-image clearfix"><%= attachment_image_tag @user, :profile_image, :fill, 120, 120, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></p>
<table class="col-xs-12">
   	<tbody>
	     <tr>
	     	<th>name</th>
	        <th><%= @user.name %></th>
	     </tr>
	     <tr>
	     	<th>introduction</th>
	  		<th><%= @user.profile %></th>
	  	</tr>
  	</tbody>
</table>
  <% if @user.id == current_user.id %>
<div class="row"><span class="label" label-primary><%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %></span>
</div>
  <% end %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	 <div class="field row">
	<label for="book_title">Title</label>
	<input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title" />
	</div>
	<div class="field row">
    <label for="book_opinion">Opinion</label>
    <textarea class="col-xs-12 book_body" name="book[body]" id="book_body">
</textarea>
  </div>
 
 <div class="actions row">
	<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book" />
 </div>
<% end %>
</div>
