


<div class='container'>
	<div class='row'>


<h1 style='color: green;'><span class="glyphicon glyphicon-wrench" aria-hidden="true" style='color: green;'></span> User info</h1>


<div class='col-xs-9'>


<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
	<h2><%= @user.errors.count %>error</h2>
<% end %>

<div class="field">
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
 <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form user_image" %>
</div>

<div class="field">
 <%= f.label :name, class: "name" %>
 <%= f.text_field :name, class: 'form-control name' %>
</div>

<div class="field">
 <%= f.text_area :profile, class: 'form-control introduction' %>
</div>

<%= f.submit "Update User" %>
<% end %>



</div>
</div>