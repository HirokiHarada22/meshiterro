

<div class='container'>
	<div class='row'>

<div class='col-md-6 col-md-offset-3'>

<% if @book.errors.any? %>
	<h2><%= @book.errors.count %>error</h2>
	<% @book.errors.full_messages.each do |message| %>
	<%= message %>
	<% end %>
<% end %>

<h2 class="edit-title" style='color: green;'><span class="glyphicon glyphicon-wrench" aria-hidden="true" style='color: green;'></span> Editing Book</h2>
<%= form_for(@book) do |f| %>


	<h4 class="edit-list" >Title</h4>
	<%= f.text_field :title, class: "col-xs-12 book_title" %>
	<h4 class="edit-list">Opinion</h4>
	<%= f.text_area :body, class: "col-xs-12 book_body" %>
	<div class="submit-action">
	<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
</div>

<h4><%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %> | <%= link_to "Back", books_path, class: "back" %></h4>
<% end %>

</div>
</div>